{
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxImportSource": "vue",

    /* Module Resolution */
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/": ["./resources/js/"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    },
    "resolveJsonModule": true,
    "allowJs": true,

    /* Emit */
    "sourceMap": true,
    "noEmit": true,

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Vue Support */
    "types": [
      "vite/client",
      "vue/tsx",
      "./resources/js/types"
    ],

    /* Experimental */
    "useDefineForClassFields": true
  },
  "include": [
    "resources/js//*.ts",
    "resources/js//*.d.ts",
    "resources/js//*.tsx",
    "resources/js//*.vue",
    "resources/js//*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "/*.spec.ts"
  ]
}